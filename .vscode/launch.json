  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["server:app", "--reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Middleware",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/middleware.py"
    }
  ],
  "compounds": [
    {
      "name": "FastAPI/Middleware",
      "configurations": ["Python: FastAPI", "Python: Middleware"],
      "stopAll": true
    }
  ]
}
